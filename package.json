{
  "name": "ts-node-template",
  "version": "1.0.0",
  "description": "Startup template for node.js projects using typescript",
  "scripts": {
    "start": "npm run build && node dist/app.js",
    "dev": "ts-node-dev --respawn src/app.ts",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "lint:staged": "lint-staged",
    "post:install": "husky install && husky add .husky/pre-commit 'npm run lint:staged'"
  },
  "keywords": [
    "node",
    "typescript",
    "template"
  ],
  "author": "Antonio José Masiá <email@antoniomasia.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^18.11.17",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.4"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "eslint --quiet"
    ]
  }
}
